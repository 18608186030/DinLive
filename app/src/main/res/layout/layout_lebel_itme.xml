<?xml version="1.0" encoding="utf-8"?>
<com.flyco.roundview.RoundRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:padding="10dp"
    app:rv_backgroundColor="@color/white"
    app:rv_backgroundPressColor="@color/gray_3">

    <com.flyco.roundview.RoundFrameLayout
        android:id="@+id/iconBg"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        app:rv_backgroundColor="#bb11ff"
        app:rv_isRadiusHalfHeight="true">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:src="@drawable/vector_seting" />
    </com.flyco.roundview.RoundFrameLayout>

    <TextView
        android:textSize="18sp"
        android:id="@+id/textLeft"
        style="@style/AppTheme.Label.Title"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/iconBg"
        android:text="title"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/gray" />

    <TextView
        android:id="@+id/textRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/into"
        android:text="hahhahhha"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/gray_3"
        android:textSize="13sp" />

    <ImageView
        android:id="@+id/into"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/vector_into" />
</com.flyco.roundview.RoundRelativeLayout>
