<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />


    <ImageView
        android:layout_width="86dp"
        android:layout_height="86dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="15dp"
        android:src="@drawable/vector_close" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="35dp"
        android:layout_marginRight="44dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.flyco.roundview.RoundTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:text="+186"
                android:textColor="#282B2E"
                app:rv_textPressColor="@color/gray" />

            <View
                android:layout_width="1dp"
                android:layout_height="16dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:background="@color/gray_3" />

            <EditText
                android:id="@+id/account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="Email/手机号"
                android:inputType="number"
                android:padding="6dp"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textColorHint="@color/gray_3"
                android:textCursorDrawable="@null"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/cleanaccount"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/vector_clean" />

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_3" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/smgcode"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="输入验证码"
                android:inputType="number"
                android:minEms="6"
                android:padding="6dp"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textColorHint="@color/gray_3"
                android:textCursorDrawable="@null"
                android:textSize="16sp" />

            <com.flyco.roundview.RoundTextView
                android:id="@+id/getcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="获取验证码"
                android:textColor="@color/red"
                app:rv_textPressColor="@color/red_1" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_3" />


        <com.flyco.roundview.RoundTextView
            android:id="@+id/register"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="49dp"
            android:gravity="center"
            android:text="登录"
            android:textColor="@color/white"
            app:rv_backgroundColor="#000000"
            app:rv_backgroundPressColor="@color/gray_3"
            app:rv_isRadiusHalfHeight="true"
            app:rv_isRippleEnable="false"
            app:rv_strokeColor="#000000"
            app:rv_strokePressColor="@color/gray_3"
            app:rv_strokeWidth="1dp"
            app:rv_textPressColor="@color/white" />

        <com.flyco.roundview.RoundTextView
            android:id="@+id/tologin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="right"
            android:text="账号密码登录"
            android:textColor="#282B2E"
            android:textSize="12sp"
            app:rv_textPressColor="@color/gray" />
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <com.flyco.roundview.RoundTextView
        android:id="@+id/toregister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="49dp"
        android:gravity="center"
        android:text="注册 | 社交账号登录"
        android:textColor="#282B2E"
        android:textSize="12sp"
        app:rv_textPressColor="@color/gray" />
</LinearLayout>